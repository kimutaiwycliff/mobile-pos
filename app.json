{
  "expo": {
    "name": "Luxe POS",
    "slug": "pos-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/luxe-icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "posmobile",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/luxe-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.posmobile.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan product barcodes.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload product images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.posmobile.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan barcodes."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos to upload product images."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f55ce676-65b8-47df-92e7-9b20615bfd10"
      }
    }
  }
}